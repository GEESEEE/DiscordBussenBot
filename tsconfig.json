{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
      "resolveJsonModule": true,
    "lib": [
      "es5",
      "es2015.promise",
      "es2017",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
